<section class="container">
	<h1>Edit Profile</h1>
	<form class="form" method="post" action="/dashboard/profile">
		<label>Name<input type="text" name="name" value="<%= user.name %>" required></label>
		<label>New Password (optional)<input type="password" name="password" placeholder="Leave blank to keep current"></label>
		<button class="btn" type="submit">Save</button>
	</form>
</section>

