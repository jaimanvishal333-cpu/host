<section class="container">
	<h1>Order</h1>
	<p>Plan: <b><%= order.plan?.title %></b></p>
	<p>Amount: â‚¹<%= order.amount %> <%= order.currency %></p>
	<p>Status: <%= order.status %></p>
	<% if (order.status === 'paid') { %>
		<div class="card">
			<p><b>Server IP:</b> <%= order.serverIP || '-' %></p>
			<p><b>Server Name:</b> <%= order.serverName || '-' %></p>
			<p><b>Credentials:</b> <%= order.credentials || '-' %></p>
		</div>
	<% } %>
	<% if (order.status !== 'paid') { %>
		<form method="post" action="/orders/<%= order._id %>/pay">
			<button type="submit" class="btn">Create Payment Session</button>
		</form>
		<% if (order.cfPaymentSessionId) { %>
			<script src="https://sdk.cashfree.com/js/ui/2.0.0/cashfree.prod.js"></script>
			<script>
				(async function(){
					const cashfree = await loadCashfree({ mode: '<%= cashfreeSandbox ? 'sandbox' : 'production' %>' });
					const result = await cashfree.checkout({ paymentSessionId: '<%= order.cfPaymentSessionId %>' });
					console.log(result);
				})();
			</script>
		<% } %>
	<% } else { %>
		<p>Payment successful.</p>
	<% } %>
</section>