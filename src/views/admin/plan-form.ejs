<section class="container">
	<h1><%= plan ? 'Edit Plan' : 'Create Plan' %></h1>
	<form action="<%= plan ? '/admin/plans/' + plan._id : '/admin/plans' %>" method="post" class="form">
		<label>Title<input type="text" name="title" value="<%= plan?.title || '' %>" required></label>
		<label>Category
			<select name="category" required>
				<option value="vps" <%= plan?.category==='vps'?'selected':'' %>>VPS</option>
				<option value="dedicated" <%= plan?.category==='dedicated'?'selected':'' %>>Dedicated</option>
				<option value="cloud" <%= plan?.category==='cloud'?'selected':'' %>>Cloud</option>
			</select>
		</label>
		<label>Description<textarea name="description"><%= plan?.description || '' %></textarea></label>
		<label>Price Monthly<input type="number" step="0.01" name="priceMonthly" value="<%= plan?.priceMonthly || '' %>" required></label>
		<label>Price Yearly<input type="number" step="0.01" name="priceYearly" value="<%= plan?.priceYearly || '' %>" required></label>
		<label>Features (one per line)<textarea name="features"><%= (plan?.features || []).join('\n') %></textarea></label>
		<% if (plan) { %>
			<label>Active <input type="checkbox" name="isActive" value="true" <%= plan.isActive ? 'checked' : '' %>></label>
		<% } %>
		<button type="submit" class="btn">Save</button>
	</form>
</section>

